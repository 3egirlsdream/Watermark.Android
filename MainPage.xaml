<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp3.MainPage" FlowDirection="MatchParent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10,5" Background="#f3f3f3">
            <Grid.Shadow>
                <Shadow Brush="#666666"
                Offset="1,1"
                Opacity="0.2" />
            </Grid.Shadow>
            <Button Grid.Row="0" HorizontalOptions="Start"  WidthRequest="95" Text="选择图片" Background="lightgray" TextColor="Black" BorderWidth="0" Margin="5,2,0,2" Clicked="OnCounterClicked" CornerRadius="2"/>
            <Polyline Grid.Row="0" BackgroundColor="LightGray" WidthRequest="1" HorizontalOptions="Start" Margin="104,5,66,1"/>
            <Button Grid.Row="0" HorizontalOptions="Start"  WidthRequest="95" Text="选择LOGO" Background="lightgray" TextColor="Black" BorderWidth="0" Margin="110,2,0,2" Clicked="ImportLogoClick" CornerRadius="2"/>
            <ImageButton Source="rotate.png" Grid.Row="0" HorizontalOptions="Start" Background="lightgray" WidthRequest="40" BorderWidth="0" Margin="215,2,0,2" Clicked="RotateClick" CornerRadius="2" Padding="5"/>

            <ImageButton Source="save.png" Grid.Row="0" HorizontalOptions="End"  WidthRequest="40" Background="lightgray" BorderWidth="0" Clicked="Button_Clicked" CornerRadius="2" Padding="5" Margin="2"/>

        </Grid>
        <Line Grid.Row="1" HeightRequest="1" BackgroundColor="LightGray" Margin="10,0"/>
        
        <Border x:Name="toast" IsVisible="false" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Start" Background="#fff" ZIndex="10" Padding="20,10" StrokeThickness="0" Margin="0,20,0,0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="5" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="black"
                Offset="1,1"
                Opacity="0.2" />
            </Border.Shadow>
            <Label x:Name="msg" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Border>
        
        <Border x:Name="loading" Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" Background="#fff" ZIndex="10" Padding="50" StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="#666666"
                Offset="1,1"
                Opacity="0.1" />
            </Border.Shadow>
            <ActivityIndicator IsRunning="true"  VerticalOptions="Center" HorizontalOptions="Center"/>
        </Border>


        <Grid Grid.Row="2" Margin="10" Background="#f3f3f3" >
            <Grid.Shadow>
                <Shadow Brush="#666666"
                Offset="1,1"
                Opacity="0.2" />
            </Grid.Shadow>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Polyline Grid.Column="0" Grid.RowSpan="2" BackgroundColor="LightGray" WidthRequest="1" HorizontalOptions="End" Margin="0,5,0,5"/>
            <StackLayout Grid.Column="0" x:Name="pics" Margin="5"
                   VerticalOptions="Start"
                HorizontalOptions="Start" />
            <Image Grid.Column="2" x:Name="preview" Margin="5" 
                   VerticalOptions="Start"
                HorizontalOptions="Center" />

            <Line Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" HeightRequest="1" BackgroundColor="LightGray" VerticalOptions="Start" Margin="10,0"/>
            <ScrollView  Grid.Column="1"  Grid.Row="1">
                <FlexLayout x:Name="logoes" Wrap="Wrap" JustifyContent="Start">
                </FlexLayout>
            </ScrollView>
        </Grid>
    </Grid>

</ContentPage>
